Bootstrap: docker
From: ubuntu:14.04

%post 
apt-get update && \
    apt-get install -y --no-install-recommends \
    make \
    git \
    ca-certificates \
    build-essential

apt-get install --yes \
    python2.7 \
    python2.7-dev \
    gfortran \
    python-setuptools
 
version=v1.3
cd /opt \
    && git clone https://bitbucket.org/uwlabmed/msings.git \
    && cd msings \
    && git checkout $version \
    && python setup.py install 


%runscript 
if [ $# -eq 0 ]
   then 
   	exec msi -h 
   else
	exec msi "$@"
fi


