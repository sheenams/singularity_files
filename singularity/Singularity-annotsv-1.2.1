Bootstrap: docker
From: ubuntu:16.04

%setup
cp /mnt/disk10/users/sheenams/singularity-files/AnnotSV_1.2.1.tar.gz /tmp

%post 
apt-get update && \
    apt-get install -y --no-install-recommends \
    tar \
    tcl \
    wget

cd /tmp \
   && tar -xzf AnnotSV_1.2.1.tar.gz \
   && mv AnnotSV_1.2.1 /usr/bin

apt-get update && \
    apt-get install -y --no-install-recommends \
    make \
    git \
    ca-certificates \
    build-essential \
    zlib1g \
    zlib1g-dev

apt-get install --yes \
    python2.7 \
    python2.7-dev \
    libpython2.7 \
    libpython2.7-dev

ln -s /usr/bin/python2.7 /usr/bin/python

version=2.26.0
#Bedtools install checks for git repo, easiest to clone and install rather than download source 
cd /opt \
   && git clone https://github.com/arq5x/bedtools2.git \
   && cd bedtools2 \
   && git checkout v2.26.0 \
   && make \
   && cp bin/* /usr/bin

apt-get clean \
    && apt-get remove --yes --purge build-essential zlib1g-dev
 
%environment
export ANNOTSV=/usr/bin/AnnotSV_1.2.1

%runscript 
if [ $# -eq 0 ]
   then 
   	exec $ANNOTSV/bin/AnnotSV -h 
   else
	exec $ANNOTSV/bin/AnnotSV "$@"
fi


